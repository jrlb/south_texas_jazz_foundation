= form_for @press_release do |f|
  - if @press_release.errors.any?
    #error_explanation
      %h2= "#{pluralize(@press_release.errors.count, "error")} prohibited this press_release from being saved:"
      %ul
        - @press_release.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :story
    = f.text_area :story
  .actions
    = f.submit 'Save'
