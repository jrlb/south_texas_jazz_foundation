!!!
%html
  %head
    %title South Texas Jazz Foundation
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", :name => "viewport"}
      %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}
        %link{:href => "/css/focus.css", :rel => "stylesheet"}
          %link{:href => "/css/focus-responsive.css", :rel => "stylesheet"}
            %link{:href => "/css/pages/homepage.css", :rel => "stylesheet"}
              / Le HTML5 shim, for IE6-8 support of HTML5 elements
              /[if lt IE 9]
                <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
              = render 'layouts/google'
              = content_for :head
              = csrf_meta_tags
  %body
    #wrapper.clearfix
      #header
        %h1
          = link_to "South Texas Jazz Foundation", root_path
      .row
        #nav.clearfix
          .container
            %ul#main-nav
              <li #{active_page([root_path, '/'])}> #{link_to "Home", root_path}
              <li #{active_page([photo_albums_path, photo_album_path('cadillac-bar'), '/photos'])}> #{link_to "Photos", photo_albums_path}
      = yield
      #copyright
        .container
          .row
            #rights.grid-6
              Â© 2012 All Rights Reserved.
            / /grid-6
            /
              <div id="totop" class="grid-6">
              <a href=""></a>
              </div>
            / /row
          / /container
        / /copyright
      / /wrapper
    %script{:src => "/js/focus.js"}
    :javascript
      $(function () {
        $('#masthead-carousel').carousel ({ interval: false });
      });
